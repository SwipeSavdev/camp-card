# ============================================================================
# Camp Card - AWS Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!
# ============================================================================

# ==========================================================================
# Database Configuration (AWS RDS)
# ==========================================================================
DB_HOST=database-3.cn00u2kgkr3j.us-east-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=campcard
DB_USERNAME=campcard_app
DB_PASSWORD=YourSecurePassword

# ==========================================================================
# Redis Configuration
# ==========================================================================
REDIS_PASSWORD=campcard123

# ==========================================================================
# JWT Configuration
# ==========================================================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your-very-long-secure-jwt-secret-key-minimum-256-bits-required

# ==========================================================================
# Web Portal Configuration
# ==========================================================================
# Production URLs (use these for production deployment)
# PUBLIC_API_URL=https://api.campcardapp.org/api/v1
# NEXTAUTH_URL=https://campcardapp.org
# NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters

# Development URLs (replace YOUR_EC2_PUBLIC_IP with your actual EC2 public IP)
PUBLIC_API_URL=http://YOUR_EC2_PUBLIC_IP:7010/api/v1
NEXTAUTH_URL=http://YOUR_EC2_PUBLIC_IP:7020
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters

# ==========================================================================
# Email Links Configuration
# ==========================================================================
# Production: These should point to the production domain
# CAMPCARD_BASE_URL=https://api.campcardapp.org
# CAMPCARD_WEB_PORTAL_URL=https://campcardapp.org

# Development: Replace YOUR_EC2_PUBLIC_IP with your actual EC2 public IP
CAMPCARD_BASE_URL=http://YOUR_EC2_PUBLIC_IP:7020
CAMPCARD_WEB_PORTAL_URL=http://YOUR_EC2_PUBLIC_IP:7020

# ==========================================================================
# Optional: Kafka Configuration
# ==========================================================================
# Kafka is configured internally in docker-compose-aws.yml
# No external configuration needed unless using external Kafka
