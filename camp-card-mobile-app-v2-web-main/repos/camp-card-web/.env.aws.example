# ============================================================================
# CAMP CARD WEB PORTAL - AWS PRODUCTION ENVIRONMENT
# ============================================================================
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=https://api.campcard.org/api/v1

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
NEXTAUTH_URL=https://admin.campcard.org
PORT=7020
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=YOUR_32_CHARACTER_SECRET_GENERATED_WITH_OPENSSL

# ============================================================================
# AUTHORIZE.NET PAYMENTS
# ============================================================================
AUTHORIZE_NET_API_LOGIN_ID=YOUR_API_LOGIN_ID
AUTHORIZE_NET_TRANSACTION_KEY=YOUR_TRANSACTION_KEY
AUTHORIZE_NET_ENVIRONMENT=PRODUCTION
AUTHORIZE_NET_SIGNATURE_KEY=YOUR_SIGNATURE_KEY

# ============================================================================
# AWS SERVICES
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
S3_BUCKET=campcard-exports

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=production

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_ENABLE_EXPORTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# EMAIL SERVICE
# ============================================================================
EMAIL_FROM=reports@campcard.org
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=YOUR_SES_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SES_SMTP_PASSWORD
