# Mobile App - Environment Variables
# Copy this file to .env and fill in actual values
#
# For Expo/EAS builds, use EXPO_PUBLIC_ prefix for client-side variables

# ============================================================================
# API CONFIGURATION
# ============================================================================
# For local development
EXPO_PUBLIC_API_BASE_URL=http://localhost:7010/api/v1
# For production (uncomment for production builds)
# EXPO_PUBLIC_API_BASE_URL=https://api.campcardapp.org/api/v1
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_ENVIRONMENT=development

# ============================================================================
# AUTHORIZE.NET PAYMENTS
# ============================================================================
AUTHORIZE_NET_PUBLIC_CLIENT_KEY=your_public_client_key
AUTHORIZE_NET_API_LOGIN_ID=your_api_login_id

# ============================================================================
# GOOGLE MAPS
# ============================================================================
GOOGLE_MAPS_API_KEY_IOS=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_MAPS_API_KEY_ANDROID=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# FIREBASE (Push Notifications & Analytics)
# ============================================================================
FIREBASE_APP_ID_IOS=1:1234567890:ios:abcdef1234567890
FIREBASE_APP_ID_ANDROID=1:1234567890:android:abcdef1234567890

# ============================================================================
# SENTRY (Error Tracking)
# ============================================================================
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_CUSTOMER_REFERRALS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_ANALYTICS=true

# ============================================================================
# DEEP LINKING
# ============================================================================
DEEP_LINK_SCHEME=campcard
DEEP_LINK_HOST=app.campcard.org

# ============================================================================
# CODEPUSH (OTA Updates)
# ============================================================================
CODEPUSH_KEY_IOS=your-ios-deployment-key
CODEPUSH_KEY_ANDROID=your-android-deployment-key
