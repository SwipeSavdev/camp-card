{
  "name": "campcard-mobile",
  "version": "1.0.0",
  "description": "BSA Camp Card Mobile App - Digital discount subscription supporting Scout fundraising",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run-android",
    "ios": "expo run-ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:node": "rm -rf node_modules && npm install",
    "pod-install": "cd ios && pod install && cd ..",
    "detox:build:ios": "detox build --configuration ios.sim.debug",
    "detox:test:ios": "detox test --configuration ios.sim.debug",
    "detox:build:android": "detox build --configuration android.emu.debug",
    "detox:test:android": "detox test --configuration android.emu.debug",
    "eas:build:dev": "eas build --profile development",
    "eas:build:preview": "eas build --profile preview",
    "eas:build:prod": "eas build --profile production",
    "eas:build:ios": "eas build --platform ios --profile production",
    "eas:build:android": "eas build --platform android --profile production",
    "eas:submit:ios": "eas submit --platform ios --latest",
    "eas:submit:android": "eas submit --platform android --latest",
    "eas:submit:all": "eas submit --platform all --latest",
    "eas:update": "eas update --branch production"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@hookform/resolvers": "^3.3.4",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-navigation/bottom-tabs": "^7.2.6",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "@react-navigation/stack": "^7.3.5",
    "@tanstack/react-query": "^5.28.0",
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "expo": "~54.0.0",
    "expo-camera": "~17.0.10",
    "expo-clipboard": "~8.0.8",
    "expo-constants": "~18.0.13",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "^8.0.11",
    "expo-local-authentication": "~17.0.8",
    "expo-location": "~19.0.8",
    "expo-notifications": "~0.32.15",
    "expo-print": "~15.0.8",
    "expo-secure-store": "~15.0.8",
    "expo-sharing": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "immer": "^10.0.3",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "react": "19.1.0",
    "react-hook-form": "^7.49.3",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-maps": "1.20.1",
    "react-native-qrcode-svg": "^6.3.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/react": "~19.1.10",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.16",
    "prettier": "^3.2.4",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|native-base|react-native-svg))"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "device": {
          "type": "iPhone 15 Pro"
        },
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": {
          "avdName": "Pixel_7_API_34"
        },
        "app": "android.debug"
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/CampCard.app",
        "build": "xcodebuild -workspace ios/CampCard.xcworkspace -scheme CampCard -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd .."
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bsa/campcard-mobile.git"
  },
  "keywords": [
    "react-native",
    "bsa",
    "scouts",
    "fundraising",
    "mobile-app",
    "discount-card"
  ],
  "author": "Boy Scouts of America",
  "license": "UNLICENSED",
  "private": true
}
