# BSA Camp Card - Production Environment Variables
# Generated from Terraform deployment on 2026-01-10
# Copy this to .env.prod and fill in secrets

# ============================================================================
# DATABASE - Amazon RDS PostgreSQL (Multi-AZ)
# ============================================================================
DB_HOST=campcard-prod-postgres.cn00u2kgkr3j.us-east-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=campcard
DB_USERNAME=campcard_admin
DB_PASSWORD=<SET_FROM_SECRETS_MANAGER>

# ============================================================================
# REDIS - Amazon ElastiCache (Cluster Mode)
# ============================================================================
REDIS_HOST=clustercfg.campcard-prod-redis.oiwim4.use2.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=<SET_FROM_SECRETS_MANAGER>
# For TLS connections (required for ElastiCache):
REDIS_SSL=true

# ============================================================================
# KAFKA - Amazon MSK (3 brokers)
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=b-1.campcardprodkafka.o3i63a.c3.kafka.us-east-2.amazonaws.com:9092,b-2.campcardprodkafka.o3i63a.c3.kafka.us-east-2.amazonaws.com:9092,b-3.campcardprodkafka.o3i63a.c3.kafka.us-east-2.amazonaws.com:9092

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION=us-east-2
S3_BUCKET=campcard-uploads-prod

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=<GENERATE_SECURE_SECRET>

# ============================================================================
# EMAIL - Amazon SES
# ============================================================================
SMTP_HOST=email-smtp.us-east-2.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=<SES_SMTP_USER>
SMTP_PASSWORD=<SES_SMTP_PASSWORD>

# ============================================================================
# PAYMENT GATEWAY
# ============================================================================
STRIPE_API_KEY=<STRIPE_API_KEY>
STRIPE_WEBHOOK_SECRET=<STRIPE_WEBHOOK_SECRET>
AUTHORIZE_NET_API_LOGIN_ID=<AUTHORIZE_NET_LOGIN>
AUTHORIZE_NET_TRANSACTION_KEY=<AUTHORIZE_NET_KEY>
AUTHORIZE_NET_ENVIRONMENT=PRODUCTION

# ============================================================================
# AI MARKETING - Together.AI
# ============================================================================
TOGETHER_AI_API_KEY=<SET_YOUR_TOGETHER_AI_API_KEY>

# ============================================================================
# APPLICATION
# ============================================================================
SERVER_PORT=7010
SPRING_PROFILES_ACTIVE=prod
CORS_ALLOWED_ORIGINS=https://app.campcard.org,https://admin.campcard.org
