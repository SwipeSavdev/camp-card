# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Terraform Backend
TF_STATE_BUCKET=campcard-terraform-state
TF_STATE_KEY=prod/terraform.tfstate
TF_STATE_REGION=us-east-1
TF_LOCK_TABLE=terraform-state-lock

# Environment
ENVIRONMENT=prod
PROJECT_NAME=campcard

# VPC Configuration
VPC_CIDR=10.0.0.0/16
AVAILABILITY_ZONES=us-east-1a,us-east-1b,us-east-1c

# EC2 Configuration
API_INSTANCE_TYPE=c6i.xlarge
API_MIN_SIZE=2
API_MAX_SIZE=10
API_DESIRED_SIZE=3

WEB_INSTANCE_TYPE=t3.medium
WEB_MIN_SIZE=2
WEB_MAX_SIZE=6
WEB_DESIRED_SIZE=2

WORKER_INSTANCE_TYPE=m6i.large
WORKER_MIN_SIZE=1
WORKER_MAX_SIZE=4
WORKER_DESIRED_SIZE=2

# RDS PostgreSQL Configuration
DB_INSTANCE_CLASS=db.r6i.2xlarge
DB_ALLOCATED_STORAGE=500
DB_ENGINE_VERSION=16.1
DB_MULTI_AZ=true
DB_BACKUP_RETENTION_DAYS=7
DB_NAME=campcard
DB_USERNAME=campcard_admin
DB_PASSWORD=your_secure_db_password

# ElastiCache Redis Configuration
REDIS_NODE_TYPE=cache.r6g.xlarge
REDIS_NUM_SHARDS=3
REDIS_NUM_REPLICAS=1
REDIS_ENGINE_VERSION=7.0

# MSK Kafka Configuration
KAFKA_INSTANCE_TYPE=kafka.m5.large
KAFKA_NUM_BROKERS=3
KAFKA_KAFKA_VERSION=3.6.0
KAFKA_STORAGE_PER_BROKER=1000

# S3 Configuration
S3_UPLOADS_BUCKET=campcard-uploads-prod
S3_EXPORTS_BUCKET=campcard-exports-prod
S3_STATIC_BUCKET=campcard-static-prod

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS=PriceClass_100

# Domain Configuration
DOMAIN_NAME=campcard.org
API_SUBDOMAIN=api.campcard.org
WEB_SUBDOMAIN=portal.campcard.org
ROUTE53_ZONE_ID=Z1234567890ABC

# ACM Certificate ARN (create manually first)
ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id

# Secrets Manager
SECRETS_MANAGER_PREFIX=campcard/prod/

# CloudWatch Configuration
LOG_RETENTION_DAYS=30
ENABLE_VPC_FLOW_LOGS=true

# SNS Alerts
SNS_ALERT_EMAIL=devops@campcard.org

# Backup Configuration
BACKUP_WINDOW=03:00-04:00
MAINTENANCE_WINDOW=Sun:04:00-Sun:05:00

# Tags
TAG_TEAM=DevOps
TAG_COST_CENTER=Engineering
TAG_COMPLIANCE=PCI-DSS
